{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@core/*": ["../core/src/*"],
      "@functions/*": ["../functions/src/*"],
      "@/*": ["./*"]
    },
    "baseUrl": ".",
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "app/**/*.ts", "app/**/*.tsx"],
  "exclude": ["node_modules", "./dist/**/*"]
}
