{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["../core/src/*"],
      "@functions/*": ["../functions/src/*"]
    },
    "lib": ["ES2020", "DOM"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
